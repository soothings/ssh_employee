<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
	
<hibernate-mapping>
   <class name="cn.itcast.entity.Department" table="department">
      <id name="did" column="did">
          <generator class="native"></generator>
      </id>
   
      <property name="dname" column="dname" length="20"></property>
      <property name="ddesc" column="ddesc" length="100"></property>
      
      <!-- 关联关系映射 -->
      <set name="employees">
           <key column="dno"></key>
           <one-to-many class="cn.itcast.entity.Employee" />
      </set> 
       
   </class>
</hibernate-mapping>	